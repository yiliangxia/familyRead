<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.familyRead.dao.CustomerMapper" >
  <resultMap id="BaseResultMap" type="com.familyRead.model.Customer" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="pass_word" property="passWord" jdbcType="VARCHAR" />
    <result column="phone" property="phone" jdbcType="VARCHAR" />
    <result column="email" property="email" jdbcType="VARCHAR" />
  </resultMap>
  <select id="selectCustomerByPhone" parameterType="com.familyRead.model.Customer" resultMap="BaseResultMap">
  	select * from customer 
  	<where>
  		<if test="phone != null">
  			and phone = ${phone}
  		</if>
  		<if test="passWord != null">
  			and pass_word = ${passWord}
  		</if>
  	</where>
  </select>
</mapper>